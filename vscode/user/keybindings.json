[
  {
    "key": "shift+k",
    "command": "editor.action.showHover",
    "when": "editorTextFocus && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditorInGroup"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditorInGroup"
  },
  {
    "key": "ctrl+pagedown",
    "command": "-workbench.action.nextEditor"
  },
  {
    "key": "ctrl+k ctrl+pagedown",
    "command": "-workbench.action.nextEditorInGroup"
  },
  {
    "key": "ctrl+alt+n",
    "command": "-workbench.action.files.newUntitledFile"
  },
  {
    "key": "ctrl+`",
    "command": "-workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "ctrl+alt+`",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "] g",
    "command": "editor.action.marker.next",
    "when": "editorFocus && vim.mode == 'Normal'"
  },
  {
    "key": "alt+f8",
    "command": "-editor.action.marker.next",
    "when": "editorFocus"
  },
  {
    "key": "[ g",
    "command": "editor.action.marker.prev",
    "when": "editorFocus && vim.mode == 'Normal'"
  },
  {
    "key": "shift+alt+f8",
    "command": "-editor.action.marker.prev",
    "when": "editorFocus"
  },
  // Full screen mode
  {
    // エディターにいるとき + ターミナル空いている: ctrl+k z でターミナルを閉じる
    "key": "ctrl+k z",
    "when": "editorFocus && view.terminal.visible",
    "command": "workbench.action.togglePanel"
  },
  {
    // エディターにいるとき + ターミナル閉じている: ctrl+k z でターミナルを開く
    "key": "ctrl+k z",
    "when": "editorFocus && !view.terminal.visible",
    "command": "runCommands",
    "args": {
      "commands": [
        "workbench.action.togglePanel",
        // TODO: なんかきれいに動かない
        // https://github.com/microsoft/vscode/issues/204810
        "workbench.action.focusLastEditorGroup"
      ]
    }
  },
  {
    // ターミナルにいるときは ctrl+k z で全画面を単に切り替える
    "key": "ctrl+k z",
    "when": "terminalFocus",
    "command": "workbench.action.toggleMaximizedPanel"
  },

  // full terminal switch
  {
    // エディターにいるとき: ctrl+k t でターミナルを全画面で開く
    "key": "ctrl+k t",
    "when": "editorFocus",
    "command": "workbench.action.toggleMaximizedPanel"
  },
  {
    // ターミナルにいるとき: ctrl+k t でエディターに戻る
    "key": "ctrl+k t",
    "when": "terminalFocus",
    "command": "workbench.action.togglePanel"
  },

  {
    "key": "ctrl+k j",
    "command": "workbench.action.terminal.focus"
  },
  {
    "key": "ctrl+k k",
    "when": "terminalFocus",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  {
    "key": "g r",
    "command": "editor.action.rename",
    "when": "listFocus && !inputFocus"
  }
]
